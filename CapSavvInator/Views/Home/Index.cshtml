@{
    ViewBag.Title = "Home";
}

<div class="enter-api-key col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
    <p>&nbsp;</p>

    <div class="form-group">
        <label class="control-label">Your Username / API Key</label>
        <div class="input-group">
            <input class="form-control" type="text" id="txtAPIKey" />
            <span class="input-group-btn">
                <button class="btn btn-default" type="button" id="cmdSaveAPIKey">Save</button>
            </span>
        </div>
        ISP: <span id="lblISP">Unknown</span>
    </div>

    <p>&nbsp;</p>

    <div id="pnlLoadingData" class="panel panel-info" style="display: none;">
        <div class="panel-heading">Requesting usage information from your ISP...</div>
        <div class="panel-body text-center">
            <br />
            <img src="@Url.Content("~/Content/Loading.gif")" alt="Loading" /><br />
            <br />
        </div>
    </div>

    <div id="pnlNoData" class="panel panel-danger" style="display: none;">
        <div class="panel-heading">No data to display!</div>
        <div class="panel-body">
            <p>Sorry, I don't have any data to display for you.</p>
            <p>Please double check your Username / API Key and try again.</p>
            <p>If it still doesn't work, feel free to @Html.ActionLink("contact me", "Contact").</p>
        </div>
    </div>
</div>

<div class="clearfix"></div>

<div id="pnlUsageData" style="display: none;">
    <div id="pnlPaid">
        <h3>Paid Usage Period</h3>
        <table class="table table-striped table-hover">
            <tr>
                <th></th>
                <th>Actual</th>
                <th><span class="visible-xs">Avg</span><span class="hidden-xs">Average</span></th>
                <th><span class="visible-xs">Est'd</span><span class="hidden-xs">Estimated</span></th>
            </tr>
            <tr class="Download">
                <td><span class="visible-xs">Down</span><span class="hidden-xs">Download</span></td>
                <td><span id="PeakDownload">...</span></td>
                <td><span id="PeakDownloadAverage">...</span></td>
                <td><span id="PeakDownloadPredicted">...</span></td>
            </tr>
            <tr class="Upload">
                <td><span class="visible-xs">Up</span><span class="hidden-xs">Upload</span></td>
                <td><span id="PeakUpload">...</span></td>
                <td><span id="PeakUploadAverage">...</span></td>
                <td><span id="PeakUploadPredicted">...</span></td>
            </tr>
            <tr class="Total">
                <td>Total</td>
                <td><span id="PeakTotal">...</span></td>
                <td><span id="PeakTotalAverage">...</span></td>
                <td><span id="PeakTotalPredicted">...</span></td>
            </tr>
        </table>
    </div>

    <div id="pnlFree">
        <h3>Free Usage Period</h3>
        <table class="table table-striped table-hover">
            <tr>
                <th></th>
                <th>Actual</th>
                <th><span class="visible-xs">Avg</span><span class="hidden-xs">Average</span></th>
                <th><span class="visible-xs">Est'd</span><span class="hidden-xs">Estimated</span></th>
            </tr>
            <tr class="Download">
                <td><span class="visible-xs">Down</span><span class="hidden-xs">Download</span></td>
                <td><span id="OffPeakDownload">...</span></td>
                <td><span id="OffPeakDownloadAverage">...</span></td>
                <td><span id="OffPeakDownloadPredicted">...</span></td>
            </tr>
            <tr class="Upload">
                <td><span class="visible-xs">Up</span><span class="hidden-xs">Upload</span></td>
                <td><span id="OffPeakUpload">...</span></td>
                <td><span id="OffPeakUploadAverage">...</span></td>
                <td><span id="OffPeakUploadPredicted">...</span></td>
            </tr>
            <tr class="Total">
                <td>Total</td>
                <td><span id="OffPeakTotal">...</span></td>
                <td><span id="OffPeakTotalAverage">...</span></td>
                <td><span id="OffPeakTotalPredicted">...</span></td>
            </tr>
        </table>
    </div>

    <div id="pnlAll">
        <h3>All Usage</h3>
        <table class="table table-striped table-hover">
            <tr>
                <th></th>
                <th>Actual</th>
                <th><span class="visible-xs">Avg</span><span class="hidden-xs">Average</span></th>
                <th><span class="visible-xs">Est'd</span><span class="hidden-xs">Estimated</span></th>
            </tr>
            <tr class="Download">
                <td><span class="visible-xs">Down</span><span class="hidden-xs">Download</span></td>
                <td><span id="AllDownload">...</span></td>
                <td><span id="AllDownloadAverage">...</span></td>
                <td><span id="AllDownloadPredicted">...</span></td>
            </tr>
            <tr class="Upload">
                <td><span class="visible-xs">Up</span><span class="hidden-xs">Upload</span></td>
                <td><span id="AllUpload">...</span></td>
                <td><span id="AllUploadAverage">...</span></td>
                <td><span id="AllUploadPredicted">...</span></td>
            </tr>
            <tr class="Total">
                <td>Total</td>
                <td><span id="AllTotal">...</span></td>
                <td><span id="AllTotalAverage">...</span></td>
                <td><span id="AllTotalPredicted">...</span></td>
            </tr>
        </table>
    </div>
</div>

@section scripts {
    <script>
        var ApiUrl = '@Url.Content("~/api/capsavvy")';
    </script>
    <script src="@Url.Content("~/Scripts/site.js")"></script>
}
